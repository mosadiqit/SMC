<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="add_button_qwerty">
      <field name="name">Add Button</field>
      <field name="model">product.template</field>
       <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//button[@name='action_update_quantity_on_hand']" position="after">
            <button name="create_product_url" string="Create URL" type="object" class="oe_highlight" invisible="1"/>
        </xpath>
           <field name="categ_id" position="after">
            <field name="url" readonly="1"/>
           </field>
      </field>
    </record>

        <record id="product_product_view_form" model="ir.ui.view">
            <field name="name">product.product.view.form.branch</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="url" readonly="1"/>
                </field>
            </field>
        </record>

           <record id="product_url_products" model="ir.actions.server">
            <field name="name">Create URls of Products</field>
            <field name="model_id" ref="model_product_template"/>
            <field name="binding_model_id" ref="model_product_template"/>
            <field name="state">code</field>
            <field name="code">records.server_create_product_url()</field>
        </record>
  </data>
</odoo>